@model List<ChatAppProj.Models.Conversation>
@Html.AntiForgeryToken()
@{
    ViewData["Title"] = "Conversations";
    var userId = ViewBag.UserId;
    var userName = ViewBag.UserName;
}

@section Styles {
    <style>
        .chat-container {
            max-width: 1200px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .chat-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .chat-header h1 {
            font-size: 2rem;
            font-weight: 600;
            color: #1a1a1a;
        }

        .new-chat-buttons {
            display: flex;
            gap: 1rem;
        }

        .btn-new-chat {
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            border: none;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-primary-chat {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .btn-primary-chat:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
        }

        .btn-secondary-chat {
            background: white;
            color: #667eea;
            border: 2px solid #667eea;
        }

        .btn-secondary-chat:hover {
            background: #f7f7ff;
        }

        .conversations-list {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .conversation-item {
            padding: 1.25rem;
            border-bottom: 1px solid #f0f0f0;
            cursor: pointer;
            transition: background 0.2s;
            display: flex;
            align-items: center;
            gap: 1rem;
            text-decoration: none;
            color: inherit;
            position: relative;
        }

        .conversation-item:hover {
            background: #f9f9ff;
        }

        .conversation-item:hover .conversation-actions {
            opacity: 1;
        }

        .conversation-actions {
            opacity: 0;
            transition: opacity 0.2s;
            display: flex;
            gap: 0.5rem;
            margin-left: auto;
        }

        .btn-delete-conversation {
            padding: 0.5rem 0.75rem;
            border-radius: 6px;
            border: none;
            background: #ff4444;
            color: white;
            cursor: pointer;
            font-size: 0.875rem;
            transition: all 0.2s;
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }

        .btn-delete-conversation:hover {
            background: #cc0000;
            transform: translateY(-1px);
        }

        .btn-delete-conversation i {
            font-size: 0.875rem;
        }

        .conversation-item:last-child {
            border-bottom: none;
        }

        .conversation-avatar {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
            font-size: 1.25rem;
            flex-shrink: 0;
        }

        .conversation-info {
            flex: 1;
            min-width: 0;
        }

        .conversation-name {
            font-weight: 600;
            font-size: 1rem;
            color: #1a1a1a;
            margin-bottom: 0.25rem;
        }

        .conversation-preview {
            font-size: 0.875rem;
            color: #666;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

        .conversation-badge {
            padding: 0.25rem 0.5rem;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 500;
            background: #667eea;
            color: white;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
        }

        .empty-state-icon {
            font-size: 4rem;
            color: #ddd;
            margin-bottom: 1rem;
        }

        .empty-state h2 {
            color: #666;
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: #999;
            margin-bottom: 2rem;
        }

        .online-indicator {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            background: #10b981;
            border: 2px solid white;
            position: absolute;
            bottom: 0;
            right: 0;
        }

        .avatar-container {
            position: relative;
        }
        
    </style>
}

<div class="chat-container">
    <div class="chat-header">
        <h1>ðŸ’¬ Conversations</h1>
        <div class="new-chat-buttons">
            <a asp-action="NewPrivate" class="btn-new-chat btn-primary-chat">
                <i class="bi bi-person-plus"></i> New Private Chat
            </a>
            <a asp-action="NewGroup" class="btn-new-chat btn-secondary-chat">
                <i class="bi bi-people"></i> New Group
            </a>
            <a asp-controller="Chat" asp-action="Requests" class="btn-new-chat btn-secondary-chat">
                <i class="bi bi-bell"></i> Requests
            </a>
        </div>
    </div>

    @if (Model.Count == 0)
    {
        <div class="conversations-list">
            <div class="empty-state">
                <div class="empty-state-icon">
                    <i class="bi bi-chat-dots"></i>
                </div>
                <h2>No conversations yet</h2>
                <p>Start a new conversation to get chatting!</p>
                <a asp-action="NewPrivate" class="btn-new-chat btn-primary-chat">
                    Start Your First Chat
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="conversations-list">
           @foreach (var conversation in Model)
            {
                var conversationName = conversation.Type == ChatAppProj.Models.ConversationType.Group 
                    ? conversation.Name 
                    : conversation.Participants.FirstOrDefault(p => p.UserId != userId)?.User?.UserName ?? "Unknown";
                
                var lastMessage = conversation.Messages?.OrderByDescending(m => m.SentAt).FirstOrDefault();
                var messagePreview = lastMessage?.Content ?? "No messages yet";
                var initial = conversationName?.Substring(0, 1).ToUpper() ?? "?";
                
                var currentParticipant = conversation.Participants.FirstOrDefault(p => p.UserId == userId);
                var isCreator = currentParticipant?.Role == ChatAppProj.Models.ConversationRole.Creator;
                var canDelete = conversation.Type == ChatAppProj.Models.ConversationType.Private || isCreator;

                <div class="conversation-item-wrapper" style="position: relative;">
                    <a asp-action="Conversation" asp-route-id="@conversation.Id" class="conversation-item">
                        <div class="avatar-container">
                            <div class="conversation-avatar">@initial</div>
                        </div>
                        <div class="conversation-info">
                            <div class="conversation-name">
                                @conversationName
                                @if (conversation.Type == ChatAppProj.Models.ConversationType.Group)
                                {
                                    <span style="font-size: 0.75rem; color: #999;">(@conversation.Participants.Count members)</span>
                                }
                            </div>
                            <div class="conversation-preview">@messagePreview</div>
                        </div>
                        @if (conversation.Type == ChatAppProj.Models.ConversationType.Group)
                        {
                            <span class="conversation-badge">Group</span>
                        }
                        
                        @if (canDelete)
                        {
                            <div class="conversation-actions" onclick="event.preventDefault(); event.stopPropagation();">
                                <button class="btn-delete-conversation" 
                                        onclick="deleteConversationFromList(@conversation.Id, '@conversationName', @(conversation.Type == ChatAppProj.Models.ConversationType.Group ? "true" : "false"))">
                                    <i class="bi bi-trash"></i>
                                    Delete
                                </button>
                            </div>
                        }
                    </a>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/chatHub?userId=@userId")
            .withAutomaticReconnect()
            .build();

        connection.start()
            .then(() => console.log("Connected to ChatHub"))
            .catch(err => console.error("SignalR connection error:", err));

        connection.on("ReceiveMessage", (message) => {
            console.log("New message received:", message);
        });

        connection.on("UserOnline", (userId, userName) => {
            console.log(`${userName} is now online`);
        });

        connection.on("UserOffline", (userId, userName) => {
            console.log(`${userName} is now offline`);
        });
        async function deleteConversationFromList(conversationId, conversationName, isGroup) {
            const type = isGroup ? 'group' : 'conversation';
            const message = isGroup 
                ? `Are you sure you want to delete "${conversationName}"? This will remove it for all members.`
                : `Are you sure you want to delete this conversation with ${conversationName}? This will remove it for both users.`;
            
            if (!confirm(message)) return;

            try {
                const response = await fetch('/Chat/DeleteConversation', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: new URLSearchParams({
                        'conversationId': conversationId,
                        '__RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    })
                });

                if (response.ok) {
                    location.reload();
                } else {
                    alert('Failed to delete ' + type);
                }
            } catch (error) {
                console.error('Error deleting ' + type + ':', error);
                alert('An error occurred');
            }
        }
    </script>
}