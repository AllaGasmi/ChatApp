@using ChatAppProj.Models
@{
    ViewData["Title"] = "Dashboard";
    var userName = ViewBag.UserName ?? "User";
    var userAvatar = ViewBag.UserAvatar ?? "https://via.placeholder.com/80";
    var stats = ViewBag.Stats as DashboardStatsDto;
    var recentConversations = ViewBag.RecentConversations as List<RecentConversationDto>;
}

@section Styles {
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
}

<div class="dashboard-container">
    <!-- Welcome Header -->
    <div class="dashboard-header">
        <img src="@userAvatar" alt="@userName" 
             style="width: 100px; height: 100px; border-radius: 50%; border: 3px solid #667eea; margin-bottom: 1.5rem;">
        
        <h1 class="welcome-message">Welcome back, @userName!</h1>
        <p class="welcome-subtitle">Here's what's happening with your account today</p>
    </div>

    <div class="quick-stats">
        <div class="stat-box">
            <div class="stat-number">@(stats?.NewMessages ?? 0)</div>
            <div class="stat-label">New Messages</div>
        </div>
        <div class="stat-box">
            <div class="stat-number">@(stats?.ActiveChats ?? 0)</div>
            <div class="stat-label">Active Chats</div>
        </div>
        <div class="stat-box">
            <div class="stat-number">@(stats?.UnreadMessages ?? 0)</div>
            <div class="stat-label">Unread</div>
        </div>
        <div class="stat-box">
            <div class="stat-number">@(stats?.FriendsOnline ?? 0)</div>
            <div class="stat-label">Friends Online</div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="quick-actions-grid">
        <a asp-controller="Chat" asp-action="Index" class="action-card">
            <div class="action-icon">
                <i class="bi bi-chat-left-text"></i>
            </div>
            <h3 class="action-title">Start Chatting</h3>
            <p class="action-description">Send messages to friends or start group conversations</p>
        </a>

        <a asp-controller="Account" asp-action="Profile" class="action-card">
            <div class="action-icon">
                <i class="bi bi-person"></i>
            </div>
            <h3 class="action-title">Edit Profile</h3>
            <p class="action-description">Update your profile picture and personal information</p>
        </a>

        <a asp-controller="Chat" asp-action="NewPrivate" class="action-card">
            <div class="action-icon">
                <i class="bi bi-people"></i>
            </div>
            <h3 class="action-title">Find Friends</h3>
            <p class="action-description">Start a new private conversation</p>
        </a>

        <a href="#" class="action-card">
            <div class="action-icon">
                <i class="bi bi-gear"></i>
            </div>
            <h3 class="action-title">Settings</h3>
            <p class="action-description">Customize your chat preferences and notifications</p>
        </a>
    </div>

    <div class="recent-section">
        <div class="section-title">
            <span><i class="bi bi-chat-left me-2"></i> Recent Conversations</span>
            <a asp-controller="Chat" asp-action="Index" class="view-all-link">
                View All <i class="bi bi-arrow-right"></i>
            </a>
        </div>

        @if (recentConversations != null && recentConversations.Any())
        {
            @foreach (var conversation in recentConversations)
            {
                <a asp-controller="Chat" asp-action="Conversation" asp-route-id="@conversation.ConversationId" 
                   class="recent-item" style="text-decoration: none; color: inherit; display: flex; align-items: center; padding: 1rem; border-radius: 8px; transition: background 0.2s; margin-bottom: 0.5rem; cursor: pointer;">
                    <img src="@conversation.AvatarUrl" alt="@conversation.Name" class="recent-avatar" 
                         style="width: 50px; height: 50px; border-radius: 50%; margin-right: 1rem;">
                    <div class="recent-info" style="flex: 1;">
                        <div class="recent-name" style="font-weight: 600; margin-bottom: 0.25rem;">
                            @conversation.Name
                            @if (conversation.IsOnline)
                            {
                                <span style="color: #10b981; font-size: 0.75rem;">‚óè Online</span>
                            }
                        </div>
                        <div class="recent-text" style="color: #666; font-size: 0.875rem; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                            @conversation.LastMessage
                        </div>
                        <div class="recent-time" style="color: #999; font-size: 0.75rem; margin-top: 0.25rem;">
                            @conversation.TimeAgo
                        </div>
                    </div>
                    @if (conversation.UnreadCount > 0)
                    {
                        <span class="unread-badge" style="background: #667eea; color: white; padding: 0.25rem 0.5rem; border-radius: 12px; font-size: 0.75rem; font-weight: 600;">
                            @conversation.UnreadCount
                        </span>
                    }
                </a>
            }
        }
        else
        {
            <div style="text-align: center; padding: 2rem; color: #999;">
                <i class="bi bi-chat-dots" style="font-size: 3rem; margin-bottom: 1rem; display: block;"></i>
                <p>No recent conversations. Start chatting!</p>
                <a asp-controller="Chat" asp-action="NewPrivate" class="btn btn-nav" style="margin-top: 1rem; display: inline-block;">
                    <i class="bi bi-chat-plus"></i> Start a Chat
                </a>
            </div>
        }
    </div>

    <!-- Help Section -->
    <div class="dashboard-header" style="text-align: center; margin-top: 2rem;">
        <h3 class="welcome-message" style="font-size: 1.5rem;">Need Help?</h3>
        <p class="welcome-subtitle">Check out our guide or contact support</p>
        <div style="margin-top: 1.5rem;">
            <a href="#" class="btn btn-nav-outline me-2">
                <i class="bi bi-question-circle me-1"></i> Help Center
            </a>
            <a href="#" class="btn btn-nav">
                <i class="bi bi-headset me-1"></i> Contact Support
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .recent-item:hover {
            background: #f9f9ff;
        }
    </style>
}