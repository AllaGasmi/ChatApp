@using ChatAppProj.Models
@{
    ViewData["Title"] = "Pending Requests";
    
    // Handle null ViewBag safely
    var sentRequests = ViewBag.SentRequests as IEnumerable<Friendship> ?? new List<Friendship>();
    var receivedRequests = ViewBag.ReceivedRequests as IEnumerable<Friendship> ?? new List<Friendship>();
    var hasDeletion = ViewBag.DeletionHappened != null && (bool)ViewBag.DeletionHappened;
}

@section Styles {
    <style>
        .pending-container {
            max-width: 1000px;
            margin: 2rem auto;
            padding: 0 1rem;
        }

        .pending-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .welcome-message {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            color: #333;
        }

        .welcome-subtitle {
            font-size: 1.1rem;
            color: #666;
            max-width: 600px;
            margin: 0 auto;
        }

        /* Tabs */
        .requests-tabs {
            margin-bottom: 2rem;
        }

        .nav-tabs-custom {
            border-bottom: 2px solid #eaeaea;
            display: flex;
            justify-content: center;
            gap: 1rem;
        }

        .nav-tabs-custom .nav-link {
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            color: #6c757d;
            border: none;
            background: transparent;
            position: relative;
            border-radius: 8px;
        }

        .nav-tabs-custom .nav-link.active {
            color: #667eea;
            background: rgba(102, 126, 234, 0.1);
        }

        .nav-tabs-custom .nav-link.active::after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, #667eea, #764ba2);
            border-radius: 2px;
        }

        .badge-count {
            margin-left: 0.5rem;
            font-size: 0.8rem;
            padding: 0.2rem 0.5rem;
        }

        /* Request cards */
        .requests-list {
            display: flex;
            flex-direction: column;
            gap: 1rem;
            margin-top: 1rem;
        }

        .request-card {
            background: white;
            border-radius: 12px;
            padding: 1.5rem;
            border: 1px solid #eaeaea;
            transition: all 0.2s ease;
        }

        .request-card:hover {
            border-color: #667eea;
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.1);
        }

        .request-header {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
        }

        .request-avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 1rem;
            border: 3px solid #fff;
            box-shadow: 0 3px 10px rgba(0,0,0,0.1);
        }

        .request-info {
            flex: 1;
        }

        .request-name {
            font-size: 1.1rem;
            font-weight: 600;
            color: #333;
            margin: 0 0 0.25rem 0;
        }

        .request-email {
            font-size: 0.9rem;
            color: #666;
            margin: 0;
        }

        .request-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 1rem;
            padding-top: 1rem;
            border-top: 1px solid #f0f0f0;
        }

        .request-time {
            font-size: 0.85rem;
            color: #999;
        }

        .request-actions {
            display: flex;
            gap: 0.75rem;
        }

        .btn-cancel {
            background: #f8f9fa;
            color: #666;
            border: 1px solid #dee2e6;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.2s ease;
        }

        .btn-cancel:hover {
            background: #e9ecef;
            border-color: #ced4da;
        }

        .btn-accept {
            background: #667eea;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.2s ease;
        }

        .btn-accept:hover {
            background: #5a6fd8;
        }

        .btn-decline {
            background: #dc3545;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.2s ease;
        }

        .btn-decline:hover {
            background: #c82333;
        }

        .empty-state {
            text-align: center;
            padding: 4rem 2rem;
            color: #999;
        }

        .empty-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }

        .alert-container {
            margin-bottom: 2rem;
        }

        .status-badge {
            display: inline-block;
            padding: 0.25rem 0.75rem;
            border-radius: 15px;
            font-size: 0.85rem;
            font-weight: 500;
            margin-left: 0.5rem;
        }

        .status-pending {
            background: #fff3cd;
            color: #856404;
            border: 1px solid #ffeaa7;
        }

        .btn-refresh {
            margin-left: 1rem;
            background: #667eea;
            color: white;
            border: none;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 500;
            transition: background 0.2s ease;
        }

        .btn-refresh:hover {
            background: #5a6fd8;
        }

        .tab-content {
            margin-top: 1.5rem;
        }
    </style>
}

<div class="pending-container">
    @if (hasDeletion)
    {
        <div class="alert-container">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle me-2"></i> Friend request cancelled successfully.
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
    }

    <div class="pending-header">
        <h1 class="welcome-message">Pending Requests</h1>
        <p class="welcome-subtitle">
            Manage your sent and received friend requests
        </p>
    </div>

    <!-- Tabs -->
    <div class="requests-tabs">
        <ul class="nav nav-tabs nav-tabs-custom" id="requestsTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="received-tab" data-bs-toggle="tab" 
                        data-bs-target="#received" type="button" role="tab">
                    <i class="bi bi-inbox me-2"></i>Received Requests
                    <span class="badge bg-primary badge-count">@receivedRequests.Count()</span>
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="sent-tab" data-bs-toggle="tab" 
                        data-bs-target="#sent" type="button" role="tab">
                    <i class="bi bi-send me-2"></i>Sent Requests
                    <span class="badge bg-warning badge-count">@sentRequests.Count()</span>
                </button>
            </li>
        </ul>
    </div>

    <!-- Tab Content -->
    <div class="tab-content" id="requestsTabContent">
        <!-- Received Requests Tab -->
        <div class="tab-pane fade show active" id="received" role="tabpanel">
            @if (receivedRequests.Any())
            {
                <div class="requests-list">
                    @foreach (Friendship request in receivedRequests)
                    {
                        <div class="request-card">
                            <div class="request-header">
                                <img src="@(request.Requester?.ProfilePicture ?? "https://via.placeholder.com/60")" 
                                     alt="@(request.Requester?.DisplayName ?? request.Requester?.UserName ?? "User")" 
                                     class="request-avatar">
                                <div class="request-info">
                                    <h3 class="request-name">
                                        @(request.Requester?.DisplayName ?? request.Requester?.UserName ?? "Unknown User")
                                        <span class="status-badge status-pending">
                                            <i class="bi bi-clock me-1"></i>Pending
                                        </span>
                                    </h3>
                                    <p class="request-email">@(request.Requester?.Email ?? "No email")</p>
                                    @if (request.Requester?.IsOnline == true)
                                    {
                                        <span style="color: #10b981; font-size: 0.75rem;">● Online</span>
                                    }
                                </div>
                            </div>
                            
                            <div class="request-meta">
                                <div class="request-time">
                                    <i class="bi bi-clock me-1"></i>Received @request.RequestedAt.ToString("g")
                                </div>
                                <div class="request-actions">
                                    <form asp-action="AcceptRequest" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="requestId" value="@request.Id">
                                        <button type="submit" class="btn-accept">
                                            <i class="bi bi-check-circle me-2"></i>Accept
                                        </button>
                                    </form>
                                    <form asp-action="DeclineRequest" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="requestId" value="@request.Id">
                                        <button type="submit" class="btn-decline">
                                            <i class="bi bi-x-circle me-2"></i>Decline
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="bi bi-inbox"></i>
                    </div>
                    <h3>No received requests</h3>
                    <p>You haven't received any friend requests.</p>
                </div>
            }
        </div>

        <!-- Sent Requests Tab -->
        <div class="tab-pane fade" id="sent" role="tabpanel">
            @if (sentRequests.Any())
            {
                <div class="requests-list">
                    @foreach (Friendship request in sentRequests)
                    {
                        <div class="request-card">
                            <div class="request-header">
                                <img src="@(request.Addressee?.ProfilePicture ?? "https://via.placeholder.com/60")" 
                                     alt="@(request.Addressee?.DisplayName ?? request.Addressee?.UserName ?? "User")" 
                                     class="request-avatar">
                                <div class="request-info">
                                    <h3 class="request-name">
                                        @(request.Addressee?.DisplayName ?? request.Addressee?.UserName ?? "Unknown User")
                                        <span class="status-badge status-pending">
                                            <i class="bi bi-clock me-1"></i>Pending
                                        </span>
                                    </h3>
                                    <p class="request-email">@(request.Addressee?.Email ?? "No email")</p>
                                    @if (request.Addressee?.IsOnline == true)
                                    {
                                        <span style="color: #10b981; font-size: 0.75rem;">● Online</span>
                                    }
                                </div>
                            </div>
                            
                            <div class="request-meta">
                                <div class="request-time">
                                    <i class="bi bi-clock me-1"></i>Sent @request.RequestedAt.ToString("g")
                                </div>
                                <div class="request-actions">
                                    <form asp-action="CancelRequest" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="requestId" value="@request.Id">
                                        <button type="submit" class="btn-cancel">
                                            <i class="bi bi-x-circle me-2"></i>Cancel Request
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-icon">
                        <i class="bi bi-send"></i>
                    </div>
                    <h3>No sent requests</h3>
                    <p>You haven't sent any friend requests.</p>
                    <a asp-controller="Friendship" asp-action="Find" class="btn btn-nav" style="margin-top: 1rem;">
                        <i class="bi bi-search me-2"></i>Find Friends
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-dismiss success alert
            setTimeout(() => {
                const alerts = document.querySelectorAll('.alert');
                alerts.forEach(alert => {
                    const bsAlert = new bootstrap.Alert(alert);
                    bsAlert.close();
                });
            }, 5000);

            // Save active tab to localStorage
            const tabButtons = document.querySelectorAll('[data-bs-toggle="tab"]');
            tabButtons.forEach(button => {
                button.addEventListener('shown.bs.tab', function() {
                    localStorage.setItem('activePendingTab', this.id);
                });
            });

            // Restore active tab
            const activeTabId = localStorage.getItem('activePendingTab');
            if (activeTabId) {
                const activeTab = document.getElementById(activeTabId);
                if (activeTab) {
                    const tab = new bootstrap.Tab(activeTab);
                    tab.show();
                }
            }
        });
    </script>
}